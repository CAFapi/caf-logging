<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.github.cafapi.logging</groupId>
        <artifactId>caf-logging</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>caf-logging-serilog</artifactId>
    <packaging>pom</packaging>

    <properties>
        <maven.install.skip>true</maven.install.skip>
        <maven.deploy.skip>false</maven.deploy.skip>
        <nugetOutputFolder>\${project.build.directory}</nugetOutputFolder>
    </properties>

     <build>
         <sourceDirectory>\${project.basedir}</sourceDirectory>

         <plugins>
             <plugin>
                 <groupId>org.codehaus.mojo</groupId>
                 <artifactId>exec-maven-plugin</artifactId>
                 <version>3.0.0</version>
                 <configuration>
                     <environmentVariables>
                         <RE_BUILD_TYPE>\${RE_BUILD_TYPE}</RE_BUILD_TYPE>
                         <VERSION>${project.version}</VERSION>
                     </environmentVariables>
                 </configuration>
                 <executions>
                     <execution>
                         <id>exec-dotnet-clean</id>
                         <phase>clean</phase>
                         <goals>
                             <goal>exec</goal>
                         </goals>
                         <configuration>
                             <executable>dotnet</executable>
                             <arguments>
                                 <argument>clean</argument>
                             </arguments>
                         </configuration>
                     </execution>
                     <execution>
                         <id>exec-dotnet-restore</id>
                         <phase>initialize</phase>
                         <goals>
                             <goal>exec</goal>
                         </goals>
                         <configuration>
                             <executable>dotnet</executable>
                             <arguments>
                                 <argument>restore</argument>
                             </arguments>
                         </configuration>
                     </execution>
                     <execution>
                         <id>exec-dotnet-build</id>
                         <phase>compile</phase>
                         <goals>
                             <goal>exec</goal>
                         </goals>
                         <configuration>
                             <executable>dotnet</executable>
                             <arguments>
                                 <argument>build</argument>
                             </arguments>
                         </configuration>
                     </execution>
                     <execution>
                         <id>exec-dotnet-pack-for-deploy</id>
                         <phase>deploy</phase>
                         <goals>
                             <goal>exec</goal>
                         </goals>
                         <configuration>
                             <executable>dotnet</executable>
                             <arguments>
                                 <argument>pack</argument>
                                 <argument>--no-build</argument>
                                 <argument>--output</argument>
                                 <argument>${nugetOutputFolder}</argument>
                             </arguments>
                         </configuration>
                     </execution>
                 </executions>
             </plugin>
             <plugin>
                 <groupId>com.mycila</groupId>
                     <artifactId>license-maven-plugin</artifactId>
                 <configuration>
                     <skip>true</skip>
                 </configuration>
             </plugin>
         </plugins>
     </build>
     <profiles>
         <profile>
             <id>compile-nosonar</id>
             <activation>
                 <activeByDefault>true</activeByDefault>
             </activation>
             <build>
                 <plugins>
                     <plugin>
                         <groupId>org.codehaus.mojo</groupId>
                         <artifactId>exec-maven-plugin</artifactId>
                         <executions>
                             <execution>
                                 <id>exec-dotnet-build</id>
                                 <phase>compile</phase>
                                 <goals>
                                     <goal>exec</goal>
                                 </goals>
                                 <configuration>
                                     <executable>dotnet</executable>
                                     <arguments>
                                         <argument>build</argument>
                                     </arguments>
                                 </configuration>
                             </execution>
                         </executions>
                     </plugin>
                 </plugins>
             </build>
         </profile>
         <profile>
             <id>compile-withsonar</id>
             <build>
                 <plugins>
                     <plugin>
                         <groupId>org.codehaus.mojo</groupId>
                         <artifactId>exec-maven-plugin</artifactId>
                         <executions>
                             <execution>
                                 <id>exec-dotnet-sonarscanner-echo</id>
                                 <phase>compile</phase>
                                 <goals>
                                     <goal>exec</goal>
                                 </goals>
                                 <configuration>
                                     <executable>echo</executable>
                                     <arguments>
                                         <argument>sonarscanner</argument>
                                         <argument>begin</argument>
                                         <argument>/k:"${project.artifactId}-${project.version}"</argument>
                                         <argument>/d:sonar.host.url="${sonar.host.url}"</argument>
                                         <argument>/d:sonar.login="${sonar.login}"</argument>
                                     </arguments>
                                 </configuration>
                             </execution>
                             <execution>
                                 <id>exec-dotnet-sonarscanner-begin</id>
                                 <phase>compile</phase>
                                 <goals>
                                     <goal>exec</goal>
                                 </goals>
                                 <configuration>
                                     <executable>dotnet</executable>
                                     <arguments>
                                         <argument>sonarscanner</argument>
                                         <argument>begin</argument>
                                         <argument>/k:${sonar.project.key}</argument>
                                         <argument>/d:sonar.host.url=${sonar.host.url}</argument>
                                         <argument>/d:sonar.login=${sonar.login}</argument>
                                     </arguments>
                                 </configuration>
                             </execution>
                             <execution>
                                 <id>exec-dotnet-build</id>
                                 <phase>compile</phase>
                                 <goals>
                                     <goal>exec</goal>
                                 </goals>
                                 <configuration>
                                     <executable>dotnet</executable>
                                     <arguments>
                                         <argument>build</argument>
                                     </arguments>
                                 </configuration>
                             </execution>
                             <execution>
                                 <id>exec-dotnet-sonarscanner-end</id>
                                 <phase>compile</phase>
                                 <goals>
                                     <goal>exec</goal>
                                 </goals>
                                 <configuration>
                                     <executable>dotnet</executable>
                                     <arguments>
                                         <argument>sonarscanner</argument>
                                         <argument>end</argument>
                                         <argument>/d:sonar.login=${sonar.login}</argument>
                                     </arguments>
                                 </configuration>
                             </execution>
                         </executions>
                     </plugin>
                 </plugins>
             </build>
         </profile>
     </profiles>

</project>
